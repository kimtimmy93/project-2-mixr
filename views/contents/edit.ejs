<h1 class="edit-content-h1">Edit Mix</h1>
<body>
        <form action="/contents/<%=content._id%>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="urlInput">URL</label>
              <input type="url" name="url" class="form-control" id="urlInput" placeholder="url">
            </div>
            <div class="form-group">
              <label for="descriptionTextarea">Description</label>
              <textarea class="form-control" name="description" id="descriptionTextarea" rows="3" placeholder="description"></textarea>
            </div>
            <button type="submit" class="btn btn-info">Edit</button>
          </form>
</body>
